<table class="transactions">
  <tr>
    <th>Merchant</th>
    <th>Categories</th>
    <th>Amount</th>
  </tr>
<% for transaction in @transactions %>
  <!-- <p><a href="/transactions/<%= transaction.id%>"><%=transaction.amount %></a></p>
  <p><a href="/transactions/<%= transaction.id%>"><%=transaction.merchant.name %></a></p>
  <p><a href="/transactions/<%= transaction.id%>"><%=transaction.category.name %></a></p>
  <hr /> -->

  <tr>
    <td><a href="/transactions/<%= transaction.id%>"><%=transaction.merchant.name %></a></td>
    <td><%=transaction.category.name %></td>
    <td><%=transaction.amount%></td>
  </tr>
<% end %>
<tr class="intro">
  <td>Total Amount</td>
  <td></td>
    <td><%= Transaction.total_amount %></td>
</tr>

</table>

<form method="post" action="/transactions">
  <label for="transaction_amount">Transaction Amount:</label>
  <input id="transaction_amount" type="number" name="amount" />


  <label>
    Transaction Merchant:
    <select name="merchant_id">
      <% for merchant in @merchants %>
      <option value="<%= merchant.id %>"><%= merchant.name %></option>
      <% end %>
    </select>
  </label>

  <label>
    Transaction Category:
    <select name="category_id">
      <% for category in @categories %>
      <option value="<%= category.id %>"><%= category.name %></option>
      <% end %>
    </select>
  </label>


  <input type='submit' value="Create Transaction"/>
</form>
